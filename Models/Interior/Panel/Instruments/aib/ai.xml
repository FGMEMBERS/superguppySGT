<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>ai.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>knob</object-name>
    <object-name>visses</object-name>
    <object-name>mask</object-name>
    <object-name>bank</object-name>
    <object-name>ball</object-name>
    <object-name>aircraft</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>mask</object-name>
    <object-name>bank</object-name>
    <object-name>ball</object-name>
    <object-name>aircraft</object-name>
    <emission>
      <factor-prop>/controls/lighting/panel-norm</factor-prop>
      <red>   0.8 </red>
      <green> 0.4 </green>
      <blue>  0.2 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>ball</object-name>
    <object-name>bank</object-name>
    <object-name>mask</object-name>
    <object-name>aircraft</object-name>
    <emission>
      <factor-prop>/controls/lighting/panel-norm</factor-prop>
      <red>   0.8 </red>
      <green> 0.4 </green>
      <blue>  0.2 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>bank</object-name>
    <property>/instrumentation/attitude-indicator/indicated-roll-deg</property>
    <interpolation>
      <entry><ind> -90 </ind><dep> -90 </dep></entry>
      <entry><ind>  90 </ind><dep>  90 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ball</object-name>
    <property>/instrumentation/attitude-indicator/indicated-roll-deg</property>
    <interpolation>
      <entry><ind> -90 </ind><dep> -90 </dep></entry>
      <entry><ind>  90 </ind><dep>  90 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
    <center>
      <x-m> -0.036 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </center>
  </animation>

  <!-- Calibrated to move 15 degrees per every 10 true: -->
  <animation>
    <type>rotate</type>
    <object-name>ball</object-name>
    <property>/instrumentation/attitude-indicator/indicated-pitch-deg</property>
    <interpolation>
      <entry><ind> -90 </ind><dep> -135 </dep></entry>
      <entry><ind>  90 </ind><dep>  135 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
    <center>
      <x-m> -0.036 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </center>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>aircraft</object-name>
    <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
    <factor> 0.001 </factor>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>knob</object-name>
    <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
    <factor> 25 </factor>
    <center>
      <x-m>  0.00 </x-m>
      <y-m> -0.03 </y-m>
      <z-m> -0.03 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
