<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>shadow.ac</path>

  <animation>
    <!-- Objets opaques -->

    <!-- Objets transparents -->
    <object-name>shadow</object-name>
    <object-name>shadownoze</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>shadow</object-name>
    <object-name>shadownoze</object-name>
  </animation>

  <animation>
    <name>AllShadow</name>
    <object-name>shadow</object-name>
    <object-name>shadownoze</object-name>
  </animation>

  <!-- Une ombre pour OSG en attendant mieux ;) basÃ© sur l'ombre du DC 3-->
  <!-- Ouverture du nez cargo -->
  <animation>
    <type>rotate</type>
    <object-name>shadownoze</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <interpolation>
		<entry><ind> 0.00 </ind><dep>  0 </dep></entry>
		<entry><ind> 0.20 </ind><dep>  0 </dep></entry>
		<entry><ind> 0.90 </ind><dep> 90 </dep></entry>
	</interpolation>
    <center>
      <x-m> -6.030 </x-m>
      <y-m> -4.025 </y-m>
      <z-m>  6.049 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
  
  <!-- pitch -->
  <animation>
    <type>rotate</type>
    <object-name>AllShadow</object-name>
    <property>orientation/pitch-deg</property>
    <factor> -1 </factor>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- roll -->
  <animation>
    <type>rotate</type>
    <object-name>AllShadow</object-name>
    <property>orientation/roll-deg</property>
    <factor> 1 </factor>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Translate to ground level -->
  <animation>
   <type>translate</type>
   <object-name>AllShadow</object-name>
   <!--<property>position/gear-agl-ft</property>-->
   <property>sim/multiplay/generic/float[2]</property>
   <factor> -1 </factor>
   <center>
     <x-m> 0 </x-m>
     <y-m> 0 </y-m>
     <z-m> 0 </z-m>
   </center>
   <axis>
     <x> 0 </x>
     <y> 0 </y>
     <z> 1 </z>
   </axis>
 </animation>

</PropertyList>

